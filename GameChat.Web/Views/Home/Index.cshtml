@{
    ViewBag.Title = "Home Page";
}

<div data-bind="visible: !isReady()" class="row">
    <div class="col-lg-12">
        <form data-bind="disable: isLoading, submit: start" class="form-inline">
            <input data-bind="value: applicationPassword" type="password" class="form-control" placeholder="password" />
            <input type="submit" value="Start" class="btn btn-success" />
        </form>
    </div>
</div>
<div data-bind="visible: isReady" class="row">
    <div class="col-lg-12">
        <select data-bind="
    options: sources,
    optionsText: function(item) { return item.name; },
    optionsCaption: 'Choose a source...',
    value: selectedSource" class="form-control"></select>
    </div>
</div>
<div data-bind="visible: needGameCredential" class="row">
    <div class="col-lg-12">
        <form data-bind="submit: login">
            <input data-bind="value: username" type="text" placeholder="username" class="form-control" />
            <input data-bind="value: password" type="password" placeholder="password" class="form-control" />
            <input data-bind="disable: username() == null || password() == null" type="submit" value="Log in" class="btn btn-success" />
        </form>
    </div>
</div>
<div data-bind="visible: isChatReady" class="row">
    <div class="col-lg-12">
        <ul data-bind="foreach: chatMessages" style="height: 500px" class="chat-list">
            <li>
                <p data-bind="text: sender" class="sender"></p>
                <p data-bind="text: message" class="message"></p>
            </li>
        </ul>
    </div>
</div>
<div data-bind="visible: isChatReady" class="row">
    <div class="col-lg-12">
        <form data-bind="disable: isChatSending, submit: send" class="form-inline">
            <input data-bind="value: newMessage, valueUpdate: 'keypress'" type="text" class="form-control" />
            <input data-bind="disable: !canBeSent()" type="submit" value="Send" class="btn btn-info" />
        </form>
    </div>
</div>

@section scripts{
    <script src="~/lib/signalr/jquery.signalR.js"></script>
    <script src="~/lib/knockout/knockout.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/lib/requirejs/require.js" data-main="js/app.js"></script>
}